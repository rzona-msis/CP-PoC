# Campus Resource Hub - Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=production

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@campushub.edu
MAIL_SUPPRESS_SEND=false

# Google Gemini AI (Optional - for AI Assistant feature)
GEMINI_API_KEY=your-gemini-api-key-here

# Google Analytics (Optional)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Cloud (Optional - for analytics integration)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Database (SQLite - no configuration needed for development)
# For production, consider PostgreSQL or MySQL

